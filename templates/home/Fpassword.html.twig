<body>

<!-- Loader -->
<div class="fh5co-loader"></div>

<div id="fh5co-page">
    <section id="fh5co-header">
        <div class="container">
            <nav role="navigation">
                <ul class="pull-left left-menu">
                    <li><a href="{{ path('app_home') }}#fh5co-about">About</a></li>
                    <li><a href="{{ path('app_home') }}#fh5co-features-2">Features</a></li>
                    <li><a href="{{ path('app_home') }}#fh5co-pricing">Pricing</a></li>
                </ul>
                <h1 id="fh5co-logo">
                    <a href="{{ path('app_home') }}">
                        <img src="{{ asset('images/logo.png') }}" style="width: 100px" alt="Logo"><span>.</span>
                    </a>
                </h1>
                <ul class="pull-right right-menu">
                    <li><a href="{{ path('app_login') }}">Login</a></li>
                    <li class="fh5co-cta-btn"><a href="{{ path('app_signup') }}">Sign up</a></li>
                </ul>
            </nav>
        </div>
    </section>
    <!-- #fh5co-header -->

    <section id="fh5co-hero" class="js-fullheight" style="background-image: url('{{ asset('images/hero_bg.jpeg') }}') ;" data-next="yes">
        <div class="fh5co-overlay"></div>
        <div class="fh5co-intro js-fullheight" style="padding-top: 10px">
            <section id="custom-connexion">
                <div class="custom-container2">
                    <p class="custom-heading">Forgot password</p>
                    <div style="text-align: left; padding-top: 10px; padding-bottom: 10px">
                        <p style="font-size: 16px; color: #3d3d3d; margin: 0;">Please enter your email address. You will receive a link to create a new password via email.</p>
                    </div>
                    {# Afficher les messages flash d'erreur #}
                    {% for flashMessage in app.flashes('error') %}
                        <div class="error-message">
                            <span class="emoji">&#9888;</span> <!-- Emoji de danger -->
                            <span class="error-text">{{ flashMessage }}</span>
                        </div>
                    {% endfor %}
                    {{ form_start(form, {'attr': {'class': 'custom-form'}}) }}
                        <div class="custom-form-group">
                            {{ form_widget(form.email, {'attr': {'class': 'custom-form-control', 'placeholder': 'Email'}}) }}
                            <div class="custom-error5-message">{{ form_errors(form.email) }}</div>
                        </div>
                    <div class="custom-form-group">
                        <input type="submit" value="Submit" class="custom-btn">
                    </div>
                    {{ form_end(form) }}
                </div>
            </section>


        </div>
    </section>

    <style>
        .error-message {
            color: #FF4500; /* Couleur orange */
            margin-bottom: 10px;
        }

        .error-message .emoji {
            font-size: 20px;
            margin-right: 5px;
        }

        .custom-form-row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .custom-form-group {
            margin-bottom: 15px;
        }

        .custom-form-group.half-width {
            width: calc(50% - 10px); /* Ajuster selon l'espace souhaité */
        }
    </style>


