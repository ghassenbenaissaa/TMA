    {% endblock %}
    <style>
        .custom-margin-right {
            margin-right: 5px; /* Ajustez la valeur selon vos besoins */
            margin-left: 10px; /* Ajustez la valeur selon vos besoins */
        }
    </style>
</head>
<body>
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start">
            <a class="navbar-brand brand-logo" href="{{ path('app_home') }}"><img src="{{ asset('images/logo33.png') }}" alt="logo" /></a>
            <a class="navbar-brand brand-logo-mini" href="{{ path('app_home') }}"><img src="{{ asset('images/apple-touch-icon.png') }}" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
            <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                <span class="mdi mdi-menu"></span>
            </button>
            <ul class="navbar-nav navbar-nav-right">
                <li class="nav-item nav-profile">
                    <a class="nav-link">
                        <div class="nav-profile-img">
                            <img src="{{ asset('logoClient/' ~ photoProfile) }}" alt="image">
                            <span class="availability-status online"></span>
                        </div>
                        <div class="nav-profile-text">
                            <p class="mb-1 text-black">{{ user.nom }} {{ user.prenom }}</p>
                        </div>
                    </a>
                </li>
                <li class="nav-item nav-logout d-none d-lg-block">
                    <a class="nav-link" href="{{ path('app_blog', {'slug': user.pageNom }) }}">
                        <i class="mdi mdi-web" aria-label="Your site web"></i>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-bs-toggle="dropdown">
                        <i class="mdi mdi-bell-outline"></i>
                        {% if notifications is not empty %}
                            <span class="count-symbol bg-danger"></span>
                        {% endif %}
                    </a>
                    <div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                        <h6 class="p-3 mb-0">Notifications</h6>
                        <div class="dropdown-divider"></div>
                        {% if notifications is empty %}
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-success">
                                        <i class="mdi mdi-check"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject font-weight-normal mb-1">No notifications</h6>
                                </div>
                            </a>
                        {% else %}
                            {% for notification in notifications %}
                                <a class="dropdown-item preview-item">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-success">
                                            <img src="{{ asset('logoClient/' ~ notification.photo) }}" alt="image">
                                        </div>
                                    </div>
                                    <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                        <h6 class="preview-subject font-weight-normal mb-1">New request</h6>
                                        <p class="text-gray ellipsis mb-0"> From {{ notification.nom }} {{ notification.prenom }}</p>
                                    </div>
                                    <div class="d-flex align-items-center mt-2">
                                        <form action="{{ path('app_respond_to_friend_request', {'requestId': notification.requestId , 'action': 'accept'}) }}" method="post">
                                            <button class="btn btn-sm btn-success rounded-circle mr-3 custom-margin-right" type="submit">
                                                <i class="mdi mdi-check"></i>
                                            </button>
                                        </form>
                                        <form action="{{ path('app_respond_to_friend_request', {'requestId': notification.requestId , 'action': 'decline'}) }}" method="post">
                                            <button class="btn btn-sm btn-danger rounded-circle" type="submit">
                                                <i class="mdi mdi-close"></i>
                                            </button>
                                        </form>
                                    </div>


                                </a>
                                <div class="dropdown-divider"></div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </li>
                <li class="nav-item d-none d-lg-block full-screen-link">
                    <a class="nav-link">
                        <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                    </a>
                </li>
                <li class="nav-item nav-logout d-none d-lg-block">
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <i class="mdi mdi-power"></i>
                    </a>
                </li>
            </ul>
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                <span class="mdi mdi-menu"></span>
            </button>
        </div>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <ul class="nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_profile', {'userId': user.id}) }}">
                        <span class="menu-title">Profile</span>
                        <i class="mdi mdi-home menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                        <span class="menu-title" style="color: #f85454">Settings</span>
                        <i class="menu-arrow"></i>
                        <i class="fa fa-gear menu-icon"></i>
                    </a>
                    <div class="collapse" id="ui-basic">
                        <ul class="nav flex-column ">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_editProfile', {'userId': user.id}) }}">
                                    <i class="fas fa-user-edit  me-2"></i> Edit Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_CPassword', {'userId': user.id}) }}">
                                    <i class="fas fa-key  me-2"></i> Change Password
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: #f85454" href="{{ path('app_friends', {'userId': user.id}) }}">
                                    <i class="fas fa-users me-2"></i> Friends
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_DAccount', {'userId': user.id}) }}">
                                    <i class="fas fa-user-times  me-2"></i> Delete Account
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#ui-pages" aria-expanded="false" aria-controls="ui-basic">
                        <span class="menu-title">{{ user.pageNom }}</span>
                        <i class="menu-arrow"></i>
                        <i class="fa fa-globe menu-icon"></i>
                    </a>
                    <div class="collapse" id="ui-pages">
                        <ul class="nav flex-column ">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_Website', {'userId': user.id}) }}">
                                    <i class="fas fa-edit me-2"></i> Edit Website
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_Msections', {'userId': user.id}) }}">
                                    <i class="fas fa-th-large me-2"></i> Main Sections
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ShowAdventures', {'userId': user.id}) }}">
                                    <i class="fas fa-mountain me-2"></i> Show Adventures
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ShowPodcast', {'userId': user.id}) }}">
                                    <i class="fas fa-podcast me-2"></i> Show Podcasts
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <div style="display: flex; justify-content: space-between; align-items: center; padding-bottom: 15px;">
                                    <h2 class="custom-heading" style="padding-bottom: 15px; margin: 0;">All your friends</h2>
                                    <div class="form-group" style="margin: 0;">
                                        <a href="{{ path('app_addfriends', {'userId': user.id}) }}" class="btn btn-primary">
                                            <i class="fas fa-plus" style="margin-right: 5px;"></i>Add friends</a>

                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for friend in friends %}
                                            <tr>
                                                <td>{{ loop.index }}</td>
                                                <td>{{ friend.nom }}</td>
                                                <td>{{ friend.prenom }}</td>
                                                <td>{{ friend.email }}</td>
                                                <td>
                                                    <a href="{{ path('app_remove_friend', {'friendId': friend.id}) }}" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash-alt"></i> Remove
                                                    </a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="5">No friends found.</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:partials/_footer.html -->
            {% block body %}

            {% endblock %}

            <footer class="footer">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">All Rights Reserved &copy; 2024, <span class="chn-text"> 加斯顿</span></span>
                </div>
            </footer>
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<div id="flash-messages-container" style="display: none;">
    {% for label, messages in app.flashes %}
        <div class="flash-messages" data-label="{{ label }}">
            {% for message in messages %}
                <div class="flash-message">{{ message }}</div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
<!-- container-scroller -->
{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const flashMessages = document.querySelectorAll('.flash-messages');

            flashMessages.forEach(function (flashMessageContainer) {
                const label = flashMessageContainer.getAttribute('data-label');
                const messages = flashMessageContainer.querySelectorAll('.flash-message');

                messages.forEach(function (messageElement) {
                    const message = messageElement.textContent;

                    // Configure SweetAlert based on the type of message
                    let swalType = 'info';
                    if (label === 'success') {
                        swalType = 'success';
                    } else if (label === 'error') {
                        swalType = 'error';
                    } else if (label === 'warning') {
                        swalType = 'warning';
                    }

                    // Display SweetAlert
                    Swal.fire({
                        icon: swalType,
                        title: message,
                        showConfirmButton: false,
                        timer: 1500 // Adjust the time as needed
                    });
                });
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
