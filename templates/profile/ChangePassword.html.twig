<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}TMA-Profile{% endblock %}</title>
    {% block stylesheets %}
        <!-- plugins:css -->
        <link rel="stylesheet" href="{{asset('vendorsProfile/mdi/css/materialdesignicons.min.css')}}">
        <link rel="stylesheet" href="{{asset('vendorsProfile/ti-icons/css/themify-icons.css')}}">
        <link rel="stylesheet" href="{{asset('vendorsProfile/css/vendor.bundle.base.css')}}">
        <link rel="stylesheet" href="{{asset('vendorsProfile/font-awesome/css/font-awesome.min.css')}}">
        <!-- endinject -->
        <!-- Plugin css for this page -->
        <link rel="stylesheet" href="{{asset('vendorsProfile/font-awesome/css/font-awesome.min.css')}}" />
        <link rel="stylesheet" href="{{asset('vendorsProfile/bootstrap-datepicker/bootstrap-datepicker.min.css')}}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <!-- End plugin css for this page -->
        <!-- inject:css -->
        <!-- endinject -->
        <!-- Layout styles -->
        <link rel="stylesheet" href="{{asset('cssProfile/style.css')}}">
        <!-- End layout styles -->
        <link rel="shortcut icon" href="{{asset('images/favicon-32x32.png')}}" />
    {% endblock %}
</head>
<body>
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start">
            <a class="navbar-brand brand-logo" href="{{ path('app_home') }}"><img src="{{ asset('images/logo33.png') }}" alt="logo" /></a>
            <a class="navbar-brand brand-logo-mini" href="{{ path('app_home') }}"><img src="{{ asset('images/apple-touch-icon.png') }}" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
            <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                <span class="mdi mdi-menu"></span>
            </button>
            <ul class="navbar-nav navbar-nav-right">
                <li class="nav-item nav-profile">
                    <a class="nav-link">
                        <div class="nav-profile-img">
                            <img src="{{ asset('imagesProfile/faces/user.png') }}" alt="image">
                        </div>
                        <div class="nav-profile-text">
                            <p class="mb-1 text-black">{{ user.nom }} {{ user.prenom }}</p>
                        </div>
                    </a>
                </li>
                <li class="nav-item d-none d-lg-block full-screen-link">
                    <a class="nav-link">
                        <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                    </a>
                </li>
                <li class="nav-item nav-logout d-none d-lg-block">
                    <a class="nav-link" href="{{ path('app_home') }}">
                        <i class="mdi mdi-power"></i>
                    </a>
                </li>
            </ul>
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                <span class="mdi mdi-menu"></span>
            </button>
        </div>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_profile', {'userId': user.id}) }}">
                        <span class="menu-title">Profile</span>
                        <i class="mdi mdi-home menu-icon"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                        <span class="menu-title">Settings</span>
                        <i class="menu-arrow"></i>
                        <i class="fa fa-gear menu-icon"></i>
                    </a>
                    <div class="collapse" id="ui-basic">
                        <ul class="nav flex-column sub-menu">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_editProfile', {'userId': user.id}) }}">Edit Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_CPassword', {'userId': user.id}) }}">Change Password</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_DAccount', {'userId': user.id}) }}">Delete Account</a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                        <span class="menu-title">{{ user.pageNom }}</span>
                        <i class="menu-arrow"></i>
                        <i class="fa fa-globe menu-icon"></i>
                    </a>
                    <div class="collapse" id="ui-basic">
                        <ul class="nav flex-column sub-menu">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_Website', {'userId': user.id}) }}">Edit Site web</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_Msections', {'userId': user.id}) }}">Main sections</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ShowAdventures', {'userId': user.id}) }}">Show adventures</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ShowPodcast', {'userId': user.id}) }}">Show podcasts</a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="custom-heading">Change password</h2>
                                <div style="text-align: left; padding-top: 10px; padding-bottom: 10px">
                                    <p style="font-size: 16px; color: #3d3d3d; margin: 0; padding-bottom: 10px;">Make sure you remember the password to log in.</p>
                                </div>
                                {% for flashMessage in app.flashes('error') %}
                                    <div class="alert alert-danger" role="alert">
                                        <span class="emoji">&#9888;</span> <!-- Emoji de danger -->
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}

                                {% for flashMessage in app.flashes('success') %}
                                    <div class="alert alert-success" role="alert">
                                        <span class="emoji">&#x1F44C;</span> <!-- Emoji de succès -->
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}

                                {{ form_start(form, {'attr': {'class': 'custom-form'}}) }}
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            {{ form_widget(form.Omdp, {'attr': {'class': 'form-control', 'placeholder': 'Old password', 'type': 'password'}}) }}
                                            <div class="input-group-append">
                                            <span class="input-group-text toggle-password">
                                                <i class="fa fa-eye"></i>
                                            </span>
                                            </div>
                                        </div>
                                        <div class="text-danger">{{ form_errors(form.Omdp) }}</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            {{ form_widget(form.mdp, {'attr': {'class': 'form-control', 'placeholder': 'New password', 'type': 'password'}}) }}
                                            <div class="input-group-append">
                                            <span class="input-group-text toggle-password">
                                                <i class="fa fa-eye"></i>
                                            </span>
                                            </div>
                                        </div>
                                        <div class="text-danger">{{ form_errors(form.mdp) }}</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            {{ form_widget(form.Cmdp, {'attr': {'class': 'form-control', 'placeholder': 'Confirm new password', 'type': 'password'}}) }}
                                            <div class="input-group-append">
                                            <span class="input-group-text toggle-password">
                                                <i class="fa fa-eye"></i>
                                            </span>
                                            </div>
                                        </div>
                                        <div class="text-danger">{{ form_errors(form.Cmdp) }}</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="submit" value="Submit" class="btn btn-primary">
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% block body %}

            {% endblock %}

            <footer class="footer">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">All Rights Reserved &copy; 2024, <span class="chn-text"> 加斯顿</span></span>
                </div>
            </footer>
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
{% block javascripts %}
    <script src="{{asset('vendorsProfile/js/vendor.bundle.base.js')}}"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="{{asset('vendorsProfile/chart.js/chart.umd.js')}}"></script>
    <script src="{{asset('vendorsProfile/bootstrap-datepicker/bootstrap-datepicker.min.js')}}"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="{{asset('jsProfile/off-canvas.js')}}"></script>
    <script src="{{asset('jsProfile/misc.js')}}"></script>
    <script src="{{asset('jsProfile/settings.js')}}"></script>
    <script src="{{asset('jsProfile/todolist.js')}}"></script>
    <script src="{{asset('jsProfile/jquery.cookie.js')}}"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="{{asset('jsProfile/dashboard.js')}}"></script>
    <!-- End custom js for this page -->


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function() {
            $(document).on("click", ".toggle-password", function() {
                $(this).toggleClass("active");
                var input = $(this).closest('.input-group').find('input');
                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
            });
        });
    </script>

    {# Vos autres scripts ici ... #}

{% endblock %}
</body>
</html>