            /* Style pour les boutons radio */
            .custom-radio {
                display: inline-block;
                vertical-align: middle;
                cursor: pointer;
                margin-right: 10px;
            }

            /* Style du cercle externe des boutons radio */
            .custom-radio input {
                position: absolute;
                opacity: 0;
                cursor: pointer;
            }

            /* Style du cercle intérieur des boutons radio */
            .custom-radio .checkmark {
                position: relative;
                display: inline-block;
                height: 16px; /* Hauteur du cercle */
                width: 16px; /* Largeur du cercle */
                background-color: #ccc;
                border-radius: 50%;
                margin-right: 5px;
                vertical-align: middle; /* Alignement vertical */
            }

            /* Style du cercle intérieur (coché) */
            .custom-radio input:checked ~ .checkmark {
                background-color: #ff6060;
            }

            /* Style du point central (coché) */
            .custom-radio .checkmark:after {
                content: "";
                position: absolute;
                display: none;
            }

            /* Afficher le point central (coché) */
            .custom-radio input:checked ~ .checkmark:after {
                display: block;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 6px; /* Taille du point central */
                height: 6px; /* Taille du point central */
