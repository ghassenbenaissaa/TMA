        <style>
            .custom-switch {
                position: relative;
                display: inline-block;
                width: 50px; /* Largeur du switch */
                height: 28px; /* Hauteur du switch */
            }

            .custom-switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

            .slider {
                position: absolute;
                cursor: pointer;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: #ccc;
                transition: .4s;
                border-radius: 28px; /* Rayon du bord du switch */
            }

            .slider:before {
                position: absolute;
                content: "";
                height: 22px; /* Taille du bouton (cercle) */
                width: 22px; /* Taille du bouton (cercle) */
                left: 3px; /* Décalage à gauche */
                bottom: 3px; /* Décalage en bas */
                background-color: white;
                transition: .4s;
                border-radius: 50%; /* Forme du bouton (cercle) */
            }

            input:checked + .slider {
                background-color: #ff7777; /* Couleur de fond du switch en état activé */
            }

            input:checked + .slider:before {
                transform: translateX(20px); /* Déplacement du bouton (cercle) à l'état activé */
            }

            .play-icon {
                cursor: pointer;
                color: #fff;
                background-color: #ff6060;
                border-radius: 50%;
                width: 40px;
                height: 40px;
                display: flex;
                justify-content: center;
                align-items: center;
                transition: background-color 0.3s ease;
            }

            .play-icon:hover {
                background-color: #b23535;
            }

            .custom-file-input {
                display: none;
            }
            .custom-file-label {
                border: 1px solid #ccc;
                padding: 10px;
                border-radius: 5px;
                cursor: pointer;
                width: 100%;
                text-align: center;
                background-color: #f8f9fa;
            }
            .custom-file-label::after {
                content: 'Audio MP3/WAV';
                display: block;
                text-align: center;
                color: #6c757d;
            }
            .form-error {
                color: red;
                text-align: center;
            }
            .custom-margin-right {
                margin-right: 5px; /* Ajustez la valeur selon vos besoins */
